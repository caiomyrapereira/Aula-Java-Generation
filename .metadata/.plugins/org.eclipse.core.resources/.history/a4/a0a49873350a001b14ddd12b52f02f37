package Lista04Exercicios;

import java.util.Scanner;

public class Exe02 {
	public static void main(String args[]) {
		
		int[] numeros = new int[6];
		int[][] arr = new int[2][6];
		String[] digitados = new String[2];
		int  somaPar = 0, qtdImpar = 0;
		Scanner ler = new Scanner(System.in);
		
		for( int count = 0; count<6; count++) {
			System.out.print("Digite um número qualquer: ");
			numeros[count]  = ler.nextInt();
		}
		
		for(int count =0; count<6; count++) {
			arr[(numeros[count]%2)][count] = numeros[count];
			somaPar+= arr[0][count];
			qtdImpar +=numeros[count]%2;
			digitados[numeros[count]%2]+=numeros[count]+", ";
		}
		 
	    System.out.println("Os números pares digitados: "+digitados[0]);
		System.out.println("A soma dos números pares digitados:"+somaPar);
		System.out.println("Os números pares digitados: "+digitados[1]);
		System.out.println("A quantidade de números ímpares digitados:"+qtdImpar);
		
		
	}
}
