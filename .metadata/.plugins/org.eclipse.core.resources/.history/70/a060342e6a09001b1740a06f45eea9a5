package Lista03Exercicios;

import java.util.Scanner;

public class Exe02 {
	public static void main(String args[]) {
		
		/*
		   
		*/
		
		int 
		count, 
		quantidadePar = 0, 
		quantidadeImpar = 0,
		numero;
		Scanner ler = new Scanner(System.in);
		
		for(count = 0; count<10; count++) {
			
			System.out.print("Digite um número qualquer: ");
			numero = ler.nextInt();
			
			if(numero%2==0){
				quantidadePar++;
			}
			else {
				quantidadeImpar++;
			}
		}
		
		System.out.printf("\nA quantidade de número Par é %d", quantidadePar);
		System.out.printf("\nA quantidade de número Impar é %d", quantidadePar);
	}
}
