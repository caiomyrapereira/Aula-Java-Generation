package PooLIsta01Exercicios;

public class MainCliente {
	public static void main(String args[]) {
		Cliente newCliente = new Cliente("Leticia", 20, "rua banada", 212121212, 2000.00 );
		
		// Método  de GetNome.
		System.out.println(newCliente.getNome());
		
		// Método de Renomear.
		newCliente.Renomear("Eduarda");
		System.out.println(newCliente.getNome());
		
		//  Métodos addIdade e getIdade.
		System.out.println(newCliente.getIdade());
		newCliente.addIdade();
		System.out.println(newCliente.getIdade());
		
		//  Métodos getInderenco e mudaDeEndereco.
		System.out.println(newCliente.getInderenco());
		newCliente.mudaDeEndereco("Rua benini");
		System.out.println(newCliente.getInderenco());
		
		// Métodos consulta e pagaDivida
		newCliente.consultaDivida(323232);
		newCliente.consultaDivida(212121212);
		newCliente.pagaDivida(212121212);
		newCliente.consultaDivida(212121212);
	}
}
