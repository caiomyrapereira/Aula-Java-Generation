package PooLista04Exercicios;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collection;
import java.util.Scanner;

public class List {
	public static void main(String args[]) {
		
		int opcao;
		Collection<String> estoque = new ArrayList();
		Collection<String> frutas = Arrays.asList("banana", "maça", "limão", "tomate");
		String produto;
		Scanner ler = new Scanner(System.in);
		estoque.addAll(frutas);


		do{
			System.out.print("(1) Para a armazenar dados da List");
			System.out.print("Escolher uma opção:");
			switch(opcao) {
			case 1:
				System.out.print("Digite um produto para armazenar no estoque:");
				produto = ler.nextLine();
				estoque.add(produto);
				break;
			}
			
			
		}while(opcao != 0);
		
	}
}
